<section class="quiz-cta">
  <div class="luxeline-container">
    <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
    <p style="max-width:640px; margin:0 auto 32px;">{{ section.settings.subheading }}</p>
    {% if section.settings.button_label != blank %}
      <a class="luxeline-button primary" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Quiz CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Your Perfect Match"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Take our quick 2-minute quiz to discover the perfect wig for your style, face shape, and lifestyle needs."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Start Quiz"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}
