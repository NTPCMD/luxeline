<section class="section-block light">
  <div class="luxeline-container">
    <div class="section-title">
      <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
    <div class="testimonial-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <p style="font-style: italic;">"{{ block.settings.review }}"</p>
          <p style="margin-top:12px; font-weight:600;">- {{ block.settings.name }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Loved by Thousands"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Based on 2,400+ verified reviews"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Name",
          "default": "Sarah M."
        },
        {
          "type": "textarea",
          "id": "review",
          "label": "Review",
          "default": "Absolutely stunning quality! The natural hairline is incredible and it's so comfortable to wear all day. Worth every penny!"
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
