<section class="section-block">
  <div class="luxeline-container">
    <div class="quality-grid">
      <div>
        <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
        <div>{{ section.settings.text }}</div>
      </div>
      <div class="quality-card" {% if section.settings.image != blank %}style="background-image:url({{ section.settings.image | image_url: width: 900 }}); background-size: cover;"{% endif %}></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Quality Promise"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>100% premium human hair, natural hairline technology, glueless comfort design, and long-lasting durability.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
