<section class="section-block light">
  <div class="luxeline-container">
    <div class="section-title">
      <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
    </div>
    <div class="values-grid">
      {% for block in section.blocks %}
        <div style="text-align:center;" {{ block.shopify_attributes }}>
          <div style="font-size:2rem; color: var(--luxeline-accent);">{{ block.settings.icon }}</div>
          <h3 style="margin:12px 0 8px;">{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Values grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What We Stand For"
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "âœ¨"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Only the finest 100% human hair, ethically sourced and carefully selected for natural beauty."
        }
      ]
    }
  ],
  "max_blocks": 8
}
{% endschema %}
