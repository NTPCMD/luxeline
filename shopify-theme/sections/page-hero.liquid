<section class="page-hero">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | image_url: width: 1800 }}" alt="{{ section.settings.heading | escape }}">
  {% endif %}
  <div class="page-hero-content">
    <div class="luxeline-container">
      <h1 class="luxeline-heading" style="color:#fff; font-size: clamp(2.6rem, 5vw, 4.5rem);">{{ section.settings.heading }}</h1>
      <p style="color: rgba(255,255,255,0.9); max-width: 640px;">{{ section.settings.subheading }}</p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Page hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Redefining beauty through luxury, quality, and confidence"
    }
  ]
}
{% endschema %}
