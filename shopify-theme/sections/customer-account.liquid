{% comment %}
  Customer Account Section
{% endcomment %}

<div class="customer-account" style="padding: 4rem 0;">
  <div class="luxeline-container">
    <h1 class="luxury-heading" style="font-size: 3rem; margin-bottom: 2rem; color: var(--luxeline-black);">
      {{ 'customer.account.title' | t }}
    </h1>
    
    <div style="display: grid; grid-template-columns: 250px 1fr; gap: 3rem;">
      {%- comment -%} Sidebar {%- endcomment -%}
      <div>
        <div class="luxeline-card">
          <div style="padding: 1rem; background-color: var(--luxeline-muted); border-radius: var(--luxeline-radius); margin-bottom: 1rem; text-align: center;">
            <div style="width: 60px; height: 60px; margin: 0 auto 0.75rem; border-radius: 50%; background-color: var(--luxeline-primary); display: flex; align-items: center; justify-content: center; color: white; font-size: 1.5rem; font-weight: 600;">
              {{ customer.first_name | slice: 0 }}{{ customer.last_name | slice: 0 }}
            </div>
            <p style="font-weight: 600; color: var(--luxeline-primary);">{{ customer.first_name }} {{ customer.last_name }}</p>
          </div>
          
          <nav style="display: flex; flex-direction: column; gap: 0.5rem;">
            <a href="/account" style="padding: 0.75rem; border-radius: 0.5rem; background-color: var(--luxeline-primary); color: white; font-weight: 600; text-align: center;">
              {{ 'customer.account.orders' | t }}
            </a>
            <a href="/account/addresses" style="padding: 0.75rem; border-radius: 0.5rem; color: var(--luxeline-primary); text-align: center; transition: background-color 0.2s ease;">
              {{ 'customer.account.addresses' | t }}
            </a>
            <a href="/account/logout" style="padding: 0.75rem; border-radius: 0.5rem; color: rgba(114, 81, 60, 0.6); text-align: center; transition: background-color 0.2s ease;">
              {{ 'customer.account.sign_out' | t }}
            </a>
          </nav>
        </div>
      </div>
      
      {%- comment -%} Main Content {%- endcomment -%}
      <div>
        <h2 class="luxury-heading" style="font-size: 2rem; margin-bottom: 1.5rem; color: var(--luxeline-black);">
          {{ 'customer.orders.title' | t }}
        </h2>
        
        {% if customer.orders.size > 0 %}
          <div style="display: flex; flex-direction: column; gap: 1rem;">
            {% for order in customer.orders %}
              <a href="{{ order.customer_url }}" class="luxeline-card" style="display: block; transition: box-shadow 0.2s ease;">
                <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 1rem;">
                  <div>
                    <p style="font-weight: 600; color: var(--luxeline-primary); margin-bottom: 0.25rem;">
                      {{ 'customer.orders.order_number' | t: number: order.name }}
                    </p>
                    <p style="font-size: 0.875rem; color: rgba(114, 81, 60, 0.6);">
                      {{ order.created_at | date: format: 'date' }}
                    </p>
                  </div>
                  <span class="luxeline-badge {% if order.financial_status == 'paid' %}luxeline-badge--primary{% endif %}">
                    {{ order.fulfillment_status_label }}
                  </span>
                </div>
                
                <div style="display: flex; gap: 1rem; margin-bottom: 1rem;">
                  {% for line_item in order.line_items limit: 3 %}
                    <div style="width: 60px; height: 60px; border-radius: 0.5rem; overflow: hidden; background-color: var(--luxeline-muted);">
                      {% if line_item.image %}
                        <img src="{{ line_item.image | image_url: width: 100 }}" alt="{{ line_item.title }}" style="width: 100%; height: 100%; object-fit: cover;">
                      {% endif %}
                    </div>
                  {% endfor %}
                  {% if order.line_items.size > 3 %}
                    <div style="width: 60px; height: 60px; border-radius: 0.5rem; background-color: var(--luxeline-muted); display: flex; align-items: center; justify-content: center; font-size: 0.875rem; font-weight: 600; color: var(--luxeline-primary);">
                      +{{ order.line_items.size | minus: 3 }}
                    </div>
                  {% endif %}
                </div>
                
                <div style="display: flex; justify-content: space-between; align-items: center; padding-top: 1rem; border-top: 1px solid var(--luxeline-border);">
                  <span style="color: rgba(114, 81, 60, 0.7);">{{ 'customer.orders.total' | t }}</span>
                  <span style="font-size: 1.25rem; font-weight: 600; color: var(--luxeline-primary);">{{ order.total_price | money }}</span>
                </div>
              </a>
            {% endfor %}
          </div>
        {% else %}
          <div class="luxeline-card" style="text-align: center; padding: 3rem;">
            <p style="color: rgba(114, 81, 60, 0.7); margin-bottom: 1.5rem;">
              {{ 'customer.orders.none' | t }}
            </p>
            <a href="/collections/all" class="luxeline-button luxeline-button--primary">
              {{ 'customer.orders.start_shopping' | t }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<style>
@media (max-width: 1024px) {
  .customer-account > .luxeline-container > div {
    grid-template-columns: 1fr !important;
  }
}
</style>

{% schema %}
{
  "name": "Customer Account",
  "settings": []
}
{% endschema %}
