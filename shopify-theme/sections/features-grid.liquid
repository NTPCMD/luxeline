<section class="section-block light">
  <div class="luxeline-container">
    <div class="section-title">
      <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
    <div class="benefits-grid">
      {% for block in section.blocks %}
        <div class="benefit-card" {{ block.shopify_attributes }}>
          <h3 style="margin-bottom:8px; color: var(--luxeline-text);">{{ block.settings.title }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Features grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose LuxeLine"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Experience the perfect blend of luxury, comfort, and natural beauty"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Natural Hairline"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Flawless blend with your natural hair for an undetectable look"
        }
      ]
    }
  ],
  "max_blocks": 8
}
{% endschema %}
