<section class="section-block light">
  <div class="luxeline-container" style="text-align:center;">
    <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3rem);">{{ section.settings.heading }}</h2>
    <p style="max-width:640px; margin:0 auto 32px;">{{ section.settings.subheading }}</p>
    <div style="display:flex; flex-wrap:wrap; gap:16px; justify-content:center;">
      {% if section.settings.primary_label != blank %}
        <a class="luxeline-button primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
      {% endif %}
      {% if section.settings.secondary_label != blank %}
        <a class="luxeline-button outline" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Still Have Questions?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our customer service team is here to help. Reach out and we'll get back to you within 24 hours."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary button label",
      "default": "Contact Us"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary button label",
      "default": "Live Chat"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary button link"
    }
  ]
}
{% endschema %}
