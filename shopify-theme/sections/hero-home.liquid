{% comment %}
  Hero Home Section
{% endcomment %}

<section class="hero-home luxeline-section" style="min-height: 80vh; display: flex; align-items: center; background-color: {{ section.settings.background_color }};">
  <div class="luxeline-container">
    <div class="hero-home__grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem; align-items: center;">
      <div class="hero-home__content" style="order: {{ section.settings.text_alignment }};">
        {% if section.settings.badge_text != blank %}
          <span class="luxeline-badge" style="margin-bottom: 1.5rem; display: inline-flex; align-items: center; gap: 0.5rem;">
            {{ section.settings.badge_text }}
          </span>
        {% endif %}
        
        <h1 class="luxury-heading" style="font-size: 4rem; margin-bottom: 1.5rem; color: var(--luxeline-black);">
          {{ section.settings.heading }}
        </h1>
        
        <p style="font-size: 1.25rem; color: var(--luxeline-primary); margin-bottom: 2.5rem; line-height: 1.6;">
          {{ section.settings.subheading }}
        </p>
        
        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
          {% if section.settings.button_1_text != blank %}
            <a href="{{ section.settings.button_1_link }}" class="luxeline-button luxeline-button--primary luxeline-button--large">
              {{ section.settings.button_1_text }}
            </a>
          {% endif %}
          
          {% if section.settings.button_2_text != blank %}
            <a href="{{ section.settings.button_2_link }}" class="luxeline-button luxeline-button--outline luxeline-button--large">
              {{ section.settings.button_2_text }}
            </a>
          {% endif %}
        </div>
        
        {% if section.settings.show_trust_indicators %}
          <div style="display: flex; flex-wrap: wrap; gap: 2rem; margin-top: 3rem;">
            <div style="display: flex; align-items: center; gap: 0.5rem;">
              <div style="display: flex;">
                {% for i in (1..5) %}
                  <span style="color: var(--luxeline-accent);">{% render 'icon', icon: 'star' %}</span>
                {% endfor %}
              </div>
              <span style="font-size: 0.875rem; color: var(--luxeline-primary);">4.9/5 (2,400+ reviews)</span>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem;">
              <span style="color: var(--luxeline-primary);">{% render 'icon', icon: 'check' %}</span>
              <span style="font-size: 0.875rem; color: var(--luxeline-primary);">100% Human Hair</span>
            </div>
          </div>
        {% endif %}
      </div>
      
      <div class="hero-home__image" style="order: {{ section.settings.image_alignment }};">
        {% if section.settings.image %}
          <div style="position: relative; border-radius: 1.5rem; overflow: hidden; box-shadow: 0 20px 60px rgba(0,0,0,0.15);">
            <img 
              src="{{ section.settings.image | image_url: width: 800 }}" 
              alt="{{ section.settings.image.alt | escape }}"
              loading="lazy"
              style="width: 100%; height: 600px; object-fit: cover;"
            >
          </div>
        {% else %}
          <div style="width: 100%; height: 600px; background: linear-gradient(135deg, var(--luxeline-muted) 0%, #e8ddd5 100%); border-radius: 1.5rem;"></div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
@media (max-width: 1024px) {
  .hero-home__grid {
    grid-template-columns: 1fr !important;
    gap: 2rem !important;
  }
  
  .hero-home__content,
  .hero-home__image {
    order: 0 !important;
  }
  
  .hero-home h1 {
    font-size: 2.5rem !important;
  }
}
</style>

{% schema %}
{
  "name": "Hero Home",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDFBF6"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "New Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Elevate Your Natural Beauty"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Premium human hair wigs designed for confidence, comfort, and flawless beauty."
    },
    {
      "type": "text",
      "id": "button_1_text",
      "label": "Button 1 Text",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_1_link",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "button_2_text",
      "label": "Button 2 Text",
      "default": "Take Quiz"
    },
    {
      "type": "url",
      "id": "button_2_link",
      "label": "Button 2 Link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "1", "label": "Left" },
        { "value": "2", "label": "Right" }
      ],
      "default": "1"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "label": "Image Alignment",
      "options": [
        { "value": "1", "label": "Left" },
        { "value": "2", "label": "Right" }
      ],
      "default": "2"
    },
    {
      "type": "checkbox",
      "id": "show_trust_indicators",
      "label": "Show Trust Indicators",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero Home"
    }
  ]
}
{% endschema %}
