<section class="section-block">
  <div class="luxeline-container">
    <div class="section-title">
      <h2 class="luxeline-heading" style="font-size: clamp(2rem, 4vw, 3.2rem);">{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>
    <div class="collection-grid">
      {% for block in section.blocks %}
        <a class="collection-card" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | image_url: width: 700 }}" alt="{{ block.settings.title | escape }}">
          {% endif %}
          <div class="collection-card-content">
            <h3 class="luxeline-heading" style="color:#fff; margin-bottom:8px; font-size:2rem;">{{ block.settings.title }}</h3>
            <p style="margin:0 0 12px; color:rgba(255,255,255,0.8);">{{ block.settings.subtitle }}</p>
            <span style="font-weight:600;">Shop Now â†’</span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Collection grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our curated collections designed for every occasion"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Glueless Wigs"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "24 Styles"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
