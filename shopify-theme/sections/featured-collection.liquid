{% comment %}
  Featured Collection Section
{% endcomment %}

<section class="featured-collection luxeline-section" style="background-color: {{ section.settings.background_color }}; padding: 5rem 0;">
  <div class="luxeline-container">
    <div style="text-align: center; margin-bottom: 3rem;">
      <h2 class="luxury-heading" style="font-size: 3rem; margin-bottom: 1rem; color: var(--luxeline-black);">
        {{ section.settings.heading }}
      </h2>
      {% if section.settings.subheading != blank %}
        <p style="font-size: 1.125rem; color: var(--luxeline-primary); max-width: 600px; margin: 0 auto;">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
    
    <div class="featured-collection__grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
      {% for block in section.blocks %}
        <a href="{{ block.settings.collection.url | default: '#' }}" class="collection-card" style="position: relative; height: 450px; border-radius: 1rem; overflow: hidden; display: block;">
          {% if block.settings.collection.featured_image %}
            <img 
              src="{{ block.settings.collection.featured_image | image_url: width: 600 }}" 
              alt="{{ block.settings.collection.title }}"
              loading="lazy"
              style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.7s ease;"
            >
          {% elsif block.settings.image %}
            <img 
              src="{{ block.settings.image | image_url: width: 600 }}" 
              alt="{{ block.settings.title | escape }}"
              loading="lazy"
              style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.7s ease;"
            >
          {% else %}
            <div style="width: 100%; height: 100%; background: linear-gradient(135deg, var(--luxeline-muted) 0%, #e8ddd5 100%);"></div>
          {% endif %}
          
          <div style="position: absolute; inset: 0; background: linear-gradient(to top, rgba(18,18,18,0.8) 0%, rgba(18,18,18,0.4) 50%, transparent 100%);"></div>
          
          <div style="position: absolute; inset: 0; display: flex; flex-direction: column; align-items: center; justify-content: flex-end; padding: 2rem; text-align: center;">
            <h3 class="luxury-heading" style="font-size: 2rem; color: white; margin-bottom: 0.5rem;">
              {{ block.settings.collection.title | default: block.settings.title }}
            </h3>
            <p style="color: rgba(255,255,255,0.8); margin-bottom: 1rem;">
              {% if block.settings.collection %}
                {{ block.settings.collection.products_count }} {{ 'collections.general.items' | t }}
              {% else %}
                {{ block.settings.subtitle }}
              {% endif %}
            </p>
            <span style="display: flex; align-items: center; gap: 0.5rem; color: white; font-weight: 600; opacity: 0; transition: opacity 0.3s ease;" class="collection-card__cta">
              <span>{{ 'collections.general.shop_now' | t }}</span>
              {% render 'icon', icon: 'arrow-right' %}
            </span>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.collection-card {
  text-decoration: none;
}

.collection-card:hover img {
  transform: scale(1.1);
}

.collection-card:hover .collection-card__cta {
  opacity: 1;
}

@media (max-width: 1024px) {
  .featured-collection__grid {
    grid-template-columns: repeat(2, 1fr) !important;
  }
}

@media (max-width: 640px) {
  .featured-collection__grid {
    grid-template-columns: 1fr !important;
  }
}
</style>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FDFBF6"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Style"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our curated collections designed for every occasion"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image (overrides collection image)"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Custom Title (if no collection selected)"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Custom Subtitle (if no collection selected)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
