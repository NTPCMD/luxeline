<section class="section-block">
  <div class="luxeline-container">
    <div class="section-title">
      <h1 class="luxeline-heading" style="font-size: clamp(2.4rem, 4vw, 3.6rem);">{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>
    </div>
    {% form 'contact', class: 'contact-form' %}
      {% if form.posted_successfully? %}
        <p>{{ 'contact.form.success' | t }}</p>
      {% endif %}
      {{ form.errors | default_errors }}
      <input type="text" name="contact[name]" placeholder="{{ 'contact.form.name' | t }}" required>
      <input type="email" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" required>
      <textarea name="contact[body]" rows="6" placeholder="{{ 'contact.form.message' | t }}" required></textarea>
      <button type="submit" class="luxeline-button primary">{{ 'contact.form.send' | t }}</button>
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact Us"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Tell us how we can help and we'll respond within 24 hours."
    }
  ]
}
{% endschema %}
