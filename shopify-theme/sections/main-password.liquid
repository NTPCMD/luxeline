{% comment %}
  Main Password Section - Coming Soon Page
{% endcomment %}

<div class="password-page" data-launch-date="{{ section.settings.launch_date }}">
  <div class="password-page__content">
    <header class="password-page__header">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" class="password-page__logo">
      {% else %}
        <h2 class="luxury-heading" style="font-size: 2rem; color: var(--luxeline-primary);">{{ shop.name }}</h2>
      {% endif %}
    </header>
    
    <main class="password-page__main">
      <h1 class="password-page__title luxury-heading">
        {{ section.settings.heading | default: 'LuxeLine is launching soon' }}
      </h1>
      
      <p class="password-page__subtitle">
        {{ section.settings.subheading | default: 'Luxury wigs designed for confidence, comfort, and flawless beauty.' }}
      </p>
      
      {% if section.settings.launch_date != blank %}
        <div class="password-page__countdown countdown-grid" style="display: none;">
          <div class="countdown-item">
            <span class="countdown-number" data-countdown="days">00</span>
            <span class="countdown-label">{{ 'general.countdown.days' | t }}</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" data-countdown="hours">00</span>
            <span class="countdown-label">{{ 'general.countdown.hours' | t }}</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" data-countdown="minutes">00</span>
            <span class="countdown-label">{{ 'general.countdown.minutes' | t }}</span>
          </div>
          <div class="countdown-item">
            <span class="countdown-number" data-countdown="seconds">00</span>
            <span class="countdown-label">{{ 'general.countdown.seconds' | t }}</span>
          </div>
        </div>
        <div class="launch-placeholder" style="display: block;">
          {{ 'general.countdown.loading' | t }}
        </div>
      {% endif %}
      
      <div class="password-page__form">
        {% form 'customer', class: 'newsletter-form' %}
          {% if form.posted_successfully? %}
            <p class="form-success">{{ 'general.newsletter.success' | t }}</p>
          {% endif %}
          
          <div class="newsletter-form__fields">
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="{{ 'general.newsletter.email_placeholder' | t }}"
              class="luxeline-input"
              required
            >
            <input type="hidden" name="contact[tags]" value="newsletter">
            <button type="submit" class="luxeline-button luxeline-button--primary">
              {{ section.settings.button_text | default: 'Notify Me' }}
            </button>
          </div>
        {% endform %}
      </div>
      
      <div class="password-page__social">
        {% if section.settings.instagram_url != blank %}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener" class="social-link">
            {% render 'icon', icon: 'instagram' %}
          </a>
        {% endif %}
        {% if section.settings.tiktok_url != blank %}
          <a href="{{ section.settings.tiktok_url }}" target="_blank" rel="noopener" class="social-link">
            {% render 'icon', icon: 'tiktok' %}
          </a>
        {% endif %}
        {% if section.settings.facebook_url != blank %}
          <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener" class="social-link">
            {% render 'icon', icon: 'facebook' %}
          </a>
        {% endif %}
      </div>
    </main>
    
    <footer class="password-page__footer">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.footer.all_rights_reserved' | t }}</p>
      {% if section.settings.show_admin_link %}
        <a href="/admin" class="password-page__admin-link">{{ 'general.password.enter_store' | t }}</a>
      {% endif %}
    </footer>
  </div>
</div>

<style>
.password-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  background: linear-gradient(135deg, #FDFBF6 0%, #f5ebe5 100%);
}

.password-page__content {
  max-width: 600px;
  width: 100%;
  text-align: center;
}

.password-page__header {
  margin-bottom: 3rem;
}

.password-page__logo {
  max-width: 200px;
  height: auto;
  margin: 0 auto;
}

.password-page__title {
  font-size: 3rem;
  color: var(--luxeline-black);
  margin-bottom: 1rem;
  line-height: 1.1;
}

.password-page__subtitle {
  font-size: 1.25rem;
  color: var(--luxeline-primary);
  margin-bottom: 3rem;
  line-height: 1.6;
}

.countdown-grid {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 3rem;
}

.countdown-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80px;
}

.countdown-number {
  font-size: 3rem;
  font-weight: 700;
  color: var(--luxeline-primary);
  font-family: 'Playfair Display', serif;
}

.countdown-label {
  font-size: 0.875rem;
  color: rgba(114, 81, 60, 0.6);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-top: 0.5rem;
}

.launch-placeholder {
  font-size: 1.125rem;
  color: var(--luxeline-primary);
  margin-bottom: 3rem;
}

.newsletter-form__fields {
  display: flex;
  gap: 0.75rem;
  margin-bottom: 2rem;
}

.newsletter-form__fields input[type="email"] {
  flex: 1;
}

.form-success {
  padding: 1rem;
  background-color: rgba(114, 81, 60, 0.1);
  color: var(--luxeline-primary);
  border-radius: var(--luxeline-radius);
  margin-bottom: 1rem;
}

.password-page__social {
  display: flex;
  justify-content: center;
  gap: 1.5rem;
  margin-bottom: 3rem;
}

.social-link {
  color: var(--luxeline-primary);
  transition: color 0.2s ease;
}

.social-link:hover {
  color: var(--luxeline-accent);
}

.password-page__footer {
  padding-top: 2rem;
  border-top: 1px solid var(--luxeline-border);
  font-size: 0.875rem;
  color: rgba(114, 81, 60, 0.6);
}

.password-page__admin-link {
  display: inline-block;
  margin-top: 0.5rem;
  color: var(--luxeline-primary);
  text-decoration: underline;
}

@media (max-width: 768px) {
  .password-page__title {
    font-size: 2rem;
  }
  
  .countdown-grid {
    gap: 1rem;
  }
  
  .countdown-number {
    font-size: 2rem;
  }
  
  .newsletter-form__fields {
    flex-direction: column;
  }
}
</style>

{% schema %}
{
  "name": "Password Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "LuxeLine is launching soon"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Luxury wigs designed for confidence, comfort, and flawless beauty."
    },
    {
      "type": "text",
      "id": "launch_date",
      "label": "Launch Date",
      "info": "Format: YYYY-MM-DD (e.g., 2026-02-14)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Notify Me"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "checkbox",
      "id": "show_admin_link",
      "label": "Show admin link",
      "default": true
    }
  ]
}
{% endschema %}
